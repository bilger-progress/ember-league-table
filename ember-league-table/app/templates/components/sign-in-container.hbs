<div class="w3-container">
    <div class="w3-section">
        <label><b>Username</b></label>
        {{input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="email" value=this.email}}
        <label><b>Password</b></label>
        {{input class="w3-input w3-border" type="password" placeholder="password" value=this.password}}
        <button class="w3-button w3-block w3-green w3-section w3-padding" {{action "signIn"}}>Sign In</button>
        <span>{{this.errorMsg}}</span>
    </div>
</div>