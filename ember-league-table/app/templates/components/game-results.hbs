<h2 class="text-green-dark text-center">Games played: {{@games.length}}</h2>
{{#each (take 10 (reverse @games)) as |game|}}
<div class="bg-blue-lightest p-2 m-2 flex font-bold text-sm">
    <div class="flex-1 text-right p-2">
        {{game.homeTeam.name}}
    </div>
    <div class="flex-shrink bg-yellow border-r-2 border-yellow-dark p-2">
        [{{game.homeGoals}}]
    </div>
    <div class="flex-shrink bg-yellow border-l-2 border-yellow-dark p-2">
        [{{game.awayGoals}}]
    </div>
    <div class="flex-1 p-2">
        {{game.awayTeam.name}}
    </div>
</div>

{{/each}}